# Author cluster farm
/author_cluster
 {
    # The load will be balanced among theese render instances
    /renders {
        /rend0 {
            /hostname "10.55.65.174"
            /port "4502"
            /timeout "0"
        }
        /rend1 {
            /hostname "10.55.65.173"
            /port "4502"
            /timeout "0"
        }
    }

    /stickyConnectionsFor "/"

    # Hostname globbing for farm selection (virtual domain addressing)
    /virtualhosts {
      "*"
    }

    $include "author_config.any"
}
